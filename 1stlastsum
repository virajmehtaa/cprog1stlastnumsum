#include <stdio.h>
#include <conio.h>

int main() 
{
    int num, firstDigit, lastDigit, sum, temp;

    printf("Enter a number: ");
    scanf("%d", &num);

    lastDigit = num % 10;

    temp = num;

    while (temp >= 10) {
        temp = temp / 10;
    }
    firstDigit = temp;

    sum = firstDigit + lastDigit;

    printf("First digit: %d\n", firstDigit);
    printf("Last digit: %d\n", lastDigit);
    printf("Sum of first and last digit: %d\n", sum);

    return 0;
}
